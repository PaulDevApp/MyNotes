<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="color">@color/colorTextNight</item>
        <item name="colorAccent">@color/colorAccentSecondary</item>
        <item name="colorOnBackground">@color/colorPrimaryNightTransparent</item>
        <item name="colorControlHighlight">@color/colorBackgroundDoneNight</item>
        <item name="cardBackgroundColor">@color/backgroundLinkAccentSecondary</item>
        <item name="android:navigationBarColor">@color/colorAppBarNight</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowSharedElementEnterTransition">
            @transition/shared_element_transition
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/shared_element_transition
        </item>
        <item name="colorSecondary">@color/colorSecondaryNight</item>
        <item name="colorSecondaryVariant">@color/colorAppBarNight</item>
        <item name="android:windowAnimationStyle">@style/WindowsAnimationTransition</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryNight</item>
    </style>
</resources>