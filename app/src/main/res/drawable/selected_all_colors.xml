<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/_1sdp"
                android:color="?attr/colorPrimary" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/_1sdp"
        android:left="@dimen/_3sdp"
        android:right="@dimen/_3sdp"
        android:top="@dimen/_3sdp">

        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/_2sdp"
                android:color="?attr/colorSecondaryVariant" />

        </shape>

    </item>

    <item
        android:bottom="@dimen/_2sdp"
        android:left="@dimen/_2sdp"
        android:right="@dimen/_2sdp"
        android:top="@dimen/_2sdp">

        <shape android:shape="rectangle">
            <solid android:color="?attr/colorPrimary" />
        </shape>

    </item>

</layer-list>