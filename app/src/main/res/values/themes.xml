<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="color">@color/colorTextDay</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondaryDay</item>
        <item name="colorSecondaryVariant">@color/colorAppBarDay</item>
        <item name="colorOnBackground">@color/colorPrimaryDayTransparent</item>
        <item name="colorControlHighlight">@color/colorBackgroundDoneDay</item>
        <item name="android:navigationBarColor">@color/colorAppBarDay</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDay</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialogTheme</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_palette</item>
    </style>


    <style name="FABStyleMain" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/ic_create_note</item>
        <item name="backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="tint">@null</item>
    </style>


    <style name="MySwitchStyle" parent="Theme.MyNotes">
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
    </style>

    <style name="TextDialogAppearance">
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="TooltipTextAppearance">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>