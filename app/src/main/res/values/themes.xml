<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryDay</item>
        <item name="color">@color/colorTextDay</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondaryDay</item>
        <item name="colorSecondaryVariant">@color/colorAppBarDay</item>
        <item name="colorOnBackground">@color/colorPrimaryDayTransparent</item>
        <item name="colorControlHighlight">@color/colorBackgroundDoneDay</item>
        <item name="android:navigationBarColor">@color/colorAppBarDay</item>
        <item name="android:windowAnimationStyle">@style/WindowsAnimationTransition</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryDay</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="WindowsAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="PopupMenuStyle" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="showAsAction">always</item>
    </style>

    <style name="FABStyleMain" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/ic_create_note</item>
        <item name="backgroundTint">?attr/colorSecondaryVariant</item>
        <item name="tint">@null</item>
    </style>

    <style name="FABStyleCreate" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:src">@drawable/ic_delete_note</item>
        <item name="backgroundTint">@color/colorDelete</item>
        <item name="tint">@null</item>
    </style>

    <style name="MySwitchStyle" parent="Theme.MyNotes">
        <item name="colorControlActivated">?attr/colorAccent</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
    </style>

    <style name="paletteViewStyleDetail">
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_width">@dimen/_40sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
    </style>

    <style name="paletteViewStyleMain">
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_width">@dimen/_35sdp</item>
        <item name="android:padding">@dimen/_5sdp</item>
    </style>

</resources>