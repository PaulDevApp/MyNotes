<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_preview_link"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_55sdp"
    android:background="@drawable/background_preview_link"
    android:visibility="gone"
    tools:background="@color/colorDefault"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/iv_site_image"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_1sdp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/app_name"
        android:maxWidth="@dimen/_50sdp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars"
        tools:visibility="visible" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_site_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginBottom="@dimen/_2sdp"
        app:layout_goneMarginEnd="@dimen/_2sdp"
        app:layout_goneMarginStart="@dimen/_2sdp"
        app:layout_goneMarginTop="@dimen/_2sdp">

        <TextView
            android:id="@+id/tv_site_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_2sdp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/colorTextNight"
            android:textSize="@dimen/_11ssp"
            android:textStyle="normal"
            android:visibility="gone"
            tools:text="Все в мире баскетбола"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_site_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:textColor="@color/colorTextNight"
            android:textSize="@dimen/_9ssp"
            android:textStyle="italic"
            android:visibility="gone"
            tools:text="@tools:sample/lorem/random"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_site_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:textColor="@color/colorTextNight"
            android:textSize="@dimen/_11ssp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="https://allbasketball.org/"
            tools:visibility="visible" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>